create database Employees;
use Employees;
CREATE TABLE Employee (
    emp_id INT PRIMARY KEY,
    emp_name VARCHAR(50) NOT NULL,
    department VARCHAR(50),
    salary DECIMAL(10,2),
    CONSTRAINT chk_salary CHECK (salary > 0)
);

INSERT INTO Employee
VALUES
    (101, 'Alice', 'HR', 45000),
    (102, 'Bob', 'Finance', 55000),
    (103, 'Charlie', 'IT', 60000);
    
ALTER TABLE Employee
DROP CONSTRAINT chk_salary;    

INSERT INTO Employee VALUES (104,'michal','son',0);

select * from Employee;

ALTER TABLE Employee
ADD email VARCHAR(100);

UPDATE Employee
SET email = 'alice@company.com'
WHERE emp_id = 101;

UPDATE Employee
SET email = 'bob@company.com'
WHERE emp_id = 102;

UPDATE Employee
SET email = 'charlie@company.com'
WHERE emp_id = 103;

UPDATE Employee
SET email = 'michalson@company.com'
WHERE emp_id = 104;


